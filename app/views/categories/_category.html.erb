<div class="card text-bg-light mb-3" style="width: 18rem; margin-right: 10px">
  <div class="card-header">
    <%= category.name %>
    <span class="badge badge-primary" style="margin-left: 5px;"><%= category.tasks.count %></span>
  </div>
  <div class="card-body d-flex justify-content-around align-items-center">
            <%= link_to category, class: "btn btn-secondary" do %>
              Go To Category
            <% end %>

            <%= link_to edit_category_path(category.id) do %> 
              <span class="mr-1"><i class="bi bi-pen"></i></span>
            <% end %>
            
            <%= link_to category_path(category.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } do %>
              <span class="mr-1"><i class="bi bi-trash3"></i></span>
            <% end %>
  </div>
</div>