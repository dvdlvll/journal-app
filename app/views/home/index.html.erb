<% if user_signed_in? %>
    <div id="tasks" class="d-flex flex-column justify-content-center align-items-center">
        <h2>Welcome back, <%= current_user.email.split("@")[0] %>!</h2>
        <p>
            <%= @today_tasks.count %> <%= "task".pluralize(@today_tasks.count) %> for today
            â€¢ 
            <%= Date.today.to_formatted_s(:long) %>
        </p>
    </div>

    <div id="tasks" class="d-flex flex-row justify-content-around align-items-center flex-wrap">
        <% @today_tasks.each do |task| %>
            <%= render task %>
        <% end %>
    </div>
<% else %>
    <h2>Please sign in to access your tasks.</h2>
<% end %>